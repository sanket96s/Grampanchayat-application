<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDAB9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFDAB9">

        <!-- Display selected document type -->
        <TextView
            android:id="@+id/document_type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="प्रमाणपत्र प्रकार"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- वैयक्तिक माहिती -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="वैयक्तिक माहिती:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/full_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="पूर्ण नाव"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_border"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/parent_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="आईचा/वडिलांचा नाव"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_border"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/dob_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="जन्मतारीख"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_border"
            android:inputType="date" />

        <RadioGroup
            android:id="@+id/gender_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <RadioButton
                android:id="@+id/male_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="पुरुष" />

            <RadioButton
                android:id="@+id/female_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="महिला" />

            <RadioButton
                android:id="@+id/other_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="इतर" />
        </RadioGroup>

        <EditText
            android:id="@+id/address_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="पत्ता"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_border"
            android:inputType="textPostalAddress" />

        <!-- संपर्क माहिती -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="संपर्क माहिती:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/mobile_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="मोबाईल नंबर"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_border"
            android:inputType="phone" />

        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ई-मेल पत्ता"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_border"
            android:inputType="textEmailAddress" />

        <!-- आवश्यक कागदपत्रे अपलोड करा -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="आवश्यक कागदपत्रे अपलोड करा:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="फोटो :" />

                <Button
                    android:id="@+id/upload_photo_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="अपलोड"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="आधार कार्ड :" />

                <Button
                    android:id="@+id/upload_aadhar_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="अपलोड"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="शिधापत्रिका :" />

                <Button
                    android:id="@+id/upload_ration_card_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="अपलोड"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- मी दिलेली माहिती खरी आणि योग्य आहे -->
        <CheckBox
            android:id="@+id/confirm_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="मी दिलेली माहिती खरी आणि योग्य आहे."
            android:layout_marginBottom="16dp" />

        <!-- अर्ज करा Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="अर्ज करा"
            android:layout_gravity="center_horizontal"
            android:padding="12dp"
            android:background="@drawable/button_background" />

    </LinearLayout>
</ScrollView>
