<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDAB9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFDAB9">

        <TextView
            android:id="@+id/document_type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="@string/document_type" />


        <!-- Personal Information Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_info"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/full_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/full_name_hint"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_border"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/parent_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/parent_name_hint"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_border"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/dob_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dob_hint"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_border"
            android:inputType="date" />

        <RadioGroup
            android:id="@+id/gender_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/female_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/other_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other"
                android:padding="8dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/address_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_hint"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_border"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/mobile_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mobile_number_hint"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_border"
            android:inputType="phone" />

        <!-- File Upload Buttons -->
        <Button
            android:id="@+id/upload_photo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_photo"
            android:layout_marginBottom="8dp"
            android:onClick="openPhotoGoogleForm" />

        <Button
            android:id="@+id/upload_aadhar_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_aadhar"
            android:layout_marginBottom="8dp"
            android:onClick="openAadharGoogleForm" />

        <Button
            android:id="@+id/upload_ration_card_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_ration_card"
            android:layout_marginBottom="8dp"
            android:onClick="openRationCardGoogleForm" />

        <!-- Confirmation CheckBox -->
        <CheckBox
            android:id="@+id/confirm_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_info"
            android:layout_marginBottom="16dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_application" />
    </LinearLayout>
</ScrollView>
