<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFDAB9">
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:paddingBottom="16dp"
            android:text="अर्जाचा फॉर्म"
            android:textAlignment="center"
            android:textColor="#0056b3"
            android:textSize="34sp"
            android:textStyle="bold" />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="115dp"
        >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="वैयक्तिक माहिती:"
                android:textColor="#0056b3"
                android:textSize="20sp"
                android:textStyle="bold" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="पूर्ण नाव"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="वय"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="पत्ता"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/et_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="मोबाइल नंबर"
            android:inputType="phone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:text="आवश्यक कागदपत्रे:"
                android:textColor="#0056b3"
                android:textSize="20sp"
                android:textStyle="bold" />

        <Button
            android:id="@+id/btn_identity_proof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ओळखपत्र अपलोड करा" />

        <Button
            android:id="@+id/btn_address_proof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="पत्त्याचा पुरावा अपलोड करा" />

        <Button
            android:id="@+id/btn_land_ownership"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="जमिनीच्या मालकीचा दस्तऐवज अपलोड करा" />

        <Button
            android:id="@+id/btn_income_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="उत्पन्न प्रमाणपत्र अपलोड करा" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="योजनेचे तपशील:"
                android:textColor="#0056b3"
                android:textSize="20sp"
                android:textStyle="bold" />

        <EditText
            android:id="@+id/et_scheme_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Scheme Name"
            android:text="अटल भूजल योजना"
            android:inputType="text"
            android:enabled="false" />

        <EditText
            android:id="@+id/et_purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="अर्जाचा उद्देश"
            android:inputType="text" />


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#0056b3"
                android:layout_marginLeft="145dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="अर्ज सादर करा"
                android:textAlignment="center"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_confirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" अर्ज यशस्वीपणे सबमिट करण्यात आला! "
                android:textSize="16sp"
                android:textColor="#4CAF50"
                android:paddingTop="16dp"
                android:visibility="gone" />

            <!-- Application ID TextView -->
            <TextView
                android:id="@+id/tv_application_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="अर्ज क्रमांक : "
                android:textSize="16sp"
                android:textColor="#4CAF50"
                android:paddingTop="8dp"
                android:visibility="gone" />


        </LinearLayout>
    </FrameLayout>
</ScrollView>
