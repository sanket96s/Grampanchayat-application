<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFDAB9">
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Heading: Application Tracking Form -->
        <TextView
            android:id="@+id/tv_tracking_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:paddingBottom="10dp"
            android:text="अर्ज ट्रॅकिंग फॉर्म"
            android:textAlignment="center"
            android:textColor="#0056b3"
            android:textSize="24sp"
            android:textStyle="bold"/>





            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="129dp"
                android:padding="6dp"
                android:text="अर्ज क्रमांक :"
                android:textSize="20sp"
                android:textStyle="bold" />

        <EditText
            android:id="@+id/et_application_id"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="159dp"
            android:hint="अर्ज क्रमांक प्रविष्ट करा"
            android:inputType="number"
            android:padding="16dp"
            android:textSize="18sp" />
            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:padding="6dp"
                android:text="कैप्चा पडताळणी :"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_captcha_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="255dp"
                android:hint="कॅप्चा प्रविष्ट करा"
                android:inputType="text"
                android:padding="12dp"
                />
        <TextView
            android:id="@+id/tv_captcha_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="149dp"
            android:layout_marginTop="255dp"
            android:text=" 3A8K4"
            android:textSize="16sp"

            android:background="#E0E0E0"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="#333333"/>
        <Button
            android:id="@+id/btn_track_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="अर्ज ट्रॅक करा"
            android:backgroundTint="#0056b3"
            android:textColor="#ffffff"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="326dp"
            android:layout_marginLeft="125dp"/>




    </FrameLayout>
</ScrollView>






