<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDAB9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerVertical"
        android:showDividers="middle">

        <!-- Section for Detailed Event Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp"
            android:background="#FFDAB9"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <!-- Event Title -->
            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="कार्यक्रमाचे शीर्षक"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#37474F" />

            <!-- Event Description -->
            <TextView
                android:id="@+id/tvEventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="कार्यक्रमाचे वर्णन येथे येईल..."
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#37474F" />

            <!-- Event Date, Time, and Venue -->
            <TextView
                android:id="@+id/tvEventDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="तारीख आणि वेळ: १ जानेवारी २०२५ - १०:०० AM"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#37474F" />

            <TextView
                android:id="@+id/tvEventVenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="स्थळ: सामुदायिक सभागृह"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="#37474F" />

            <!-- Placeholder for Venue Photo (Map View) -->
            <FrameLayout
                android:id="@+id/mapViewContainer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#B0BEC5"
                android:layout_marginTop="16dp" />

            <!-- Agenda -->
            <TextView
                android:id="@+id/tvEventAgenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="कार्यसूची: विकास योजनांवर चर्चा"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#607D8B" />

            <!-- Organizer and Contact Info -->
            <TextView
                android:id="@+id/tvEventOrganizers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="आयोजक: ग्राम पंचायत कार्यालय"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#37474F" />

            <!-- Contact Information -->
            <TextView
                android:id="@+id/tvEventContactInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="संपर्क: ९८२१२३४५६७"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#37474F" />

            <!-- Event Registration Button -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="नोंदणी करा"
                android:textSize="16sp"
                android:backgroundTint="#3F51B5"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
