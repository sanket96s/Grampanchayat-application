<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4C7A3"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback_name_label"
            android:textSize="16sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/feedback_etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/feedback_name_hint"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback_email_label"
            android:textSize="16sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/feedback_etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/feedback_email_hint"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textEmailAddress"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback_message_label"
            android:textSize="16sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/feedback_etMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/feedback_message_hint"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:inputType="textMultiLine"
            android:minLines="5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/feedback_btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback_submit_button"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#FF8800"
                android:padding="12dp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
