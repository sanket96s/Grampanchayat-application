<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFE0B2">

    <!-- Header Section with Icon and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFE0B2"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/certificatesapplicationicon" /> <!-- Add your certificate icon drawable -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="प्रमाणपत्र प्रकार निवडा :"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Radio Buttons for Different Certificate Types -->
    <RadioGroup
        android:id="@+id/radioGroup_certificate_types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/radio_birth_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="जन्म प्रमाणपत्र"
            android:textColor="#000000"
            android:padding="12dp"
            android:buttonTint="#81D4FA" />

        <RadioButton
            android:id="@+id/radio_death_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="मृत्यू प्रमाणपत्र"
            android:textColor="#000000"
            android:padding="12dp"
            android:buttonTint="#81D4FA" />

        <RadioButton
            android:id="@+id/radio_residence_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="रहिवासी प्रमाणपत्र"
            android:textColor="#000000"
            android:padding="12dp"
            android:buttonTint="#81D4FA" />

        <RadioButton
            android:id="@+id/radio_income_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="उत्पन्न प्रमाणपत्र"
            android:textColor="#000000"
            android:padding="12dp"
            android:buttonTint="#81D4FA" />
    </RadioGroup>

    <!-- Submit and Track Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_submit_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="अर्ज सादर करा"
            android:backgroundTint="#FFA726"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:elevation="4dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_track_certificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="प्रमाणपत्र शोधा"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:elevation="4dp" />
    </LinearLayout>

</LinearLayout>
