<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFE0B2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFE0B2"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/select_certificate_type"
            android:src="@drawable/certificatesapplicationicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_text"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup_certificate_types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/radio_birth_certificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birth_certificate"
            android:textColor="#000000"
            android:padding="12dp"
            android:buttonTint="#81D4FA" />

        <RadioButton
            android:id="@+id/radio_death_certificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/death_certificate"
            android:textColor="#000000"
            android:padding="12dp"
            android:buttonTint="#81D4FA" />

        <RadioButton
            android:id="@+id/radio_residence_certificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/residence_certificate"
            android:textColor="#000000"
            android:padding="12dp"
            android:buttonTint="#81D4FA" />

        <RadioButton
            android:id="@+id/radio_income_certificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/income_certificate"
            android:textColor="#000000"
            android:padding="12dp"
            android:buttonTint="#81D4FA" />
    </RadioGroup>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_submit_application"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_application"
            android:backgroundTint="#FF7043"
            android:textColor="#000000"
            android:padding="12dp"
            android:elevation="4dp"
            android:layout_marginEnd="8dp" />



        <Button
            android:id="@+id/btn_track_certificate"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/track_certificate"
            android:backgroundTint="#4CAF50"
            android:textColor="#000000"
            android:padding="12dp"
            android:elevation="4dp" />
    </LinearLayout>

</LinearLayout>
