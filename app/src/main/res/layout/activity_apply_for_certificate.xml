<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFE0B2">

    <!-- Header Section with Icon and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFE0B2"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/certificatesapplicationicon" /> <!-- Add your certificate icon drawable -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="प्रमाणपत्र प्रकार निवडा :"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Buttons for Different Certificate Types -->
    <Button
        android:id="@+id/btn_birth_certificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="जन्म प्रमाणपत्र"
        android:backgroundTint="#81D4FA"
        android:textColor="#000000"
        android:padding="12dp"
        android:elevation="2dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_death_certificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="मृत्यू प्रमाणपत्र"
        android:backgroundTint="#81D4FA"
        android:textColor="#000000"
        android:padding="12dp"
        android:elevation="2dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_residence_certificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="रहिवासी प्रमाणपत्र"
        android:backgroundTint="#81D4FA"
        android:textColor="#000000"
        android:padding="12dp"
        android:elevation="2dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_income_certificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="उत्पन्न प्रमाणपत्र"
        android:backgroundTint="#81D4FA"
        android:textColor="#000000"
        android:padding="12dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_submit_application"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="अर्ज सादर करा"
        android:backgroundTint="#FFA726"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_marginTop="8dp" />

</LinearLayout>
