<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4CBA0">

    <!-- Tabs (Two buttons) -->
    <Button
        android:id="@+id/tab1_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="चालू प्रकल्प"
        android:textColor="@android:color/black"
        android:backgroundTint="#F08A5D"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tab2_button"
        app:layout_constraintWidth_percent="0.5"/>

    <Button
        android:id="@+id/tab2_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="मागील प्रकल्प"
        android:textColor="@android:color/black"
        android:backgroundTint="#A8D8EA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tab1_button"
        app:layout_constraintWidth_percent="0.5"/>

    <!-- ListView for displaying projects -->
    <ListView
        android:id="@+id/projectListView"
        android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@+id/tab1_button"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
