<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDAB9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerVertical"
        android:showDividers="middle">

        <!-- Section for Event Category Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Event Category"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#37474F" />

            <Spinner
                android:id="@+id/spinnerEventCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Section for Upcoming and Past Events -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events Overview"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#37474F" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnUpcomingEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming Events"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnPastEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Past Events"
                    android:backgroundTint="#FF7043"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <!-- Section for Detailed Event Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp">

            <!-- Event Title -->
            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#37474F" />

            <!-- Event Description -->
            <TextView
                android:id="@+id/tvEventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Description goes here..."
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#607D8B" />

            <!-- Event Date, Time, and Venue -->
            <TextView
                android:id="@+id/tvEventDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date  Time: Jan 1, 2025 - 10:00 AM"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#37474F" />

            <TextView
                android:id="@+id/tvEventVenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue: Community Hall"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="#37474F" />

            <!-- Placeholder for Map View -->
            <FrameLayout
                android:id="@+id/mapViewContainer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#B0BEC5"
                android:layout_marginTop="16dp" />

            <!-- Agenda -->
            <TextView
                android:id="@+id/tvEventAgenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agenda: Discuss development plans"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#607D8B" />

            <!-- Organizer and Contact Info -->
            <TextView
                android:id="@+id/tvEventOrganizers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organizers: Gram Panchayat Office"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#37474F" />

            <!-- Buttons for Registration, Reminders, and Sharing -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:backgroundTint="#3F51B5"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btnSetReminder"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Set Reminder"
                    android:backgroundTint="#FF9800"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btnShareEvent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:backgroundTint="#009688"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
