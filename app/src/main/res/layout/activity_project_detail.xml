<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Project Title -->
            <TextView
                android:id="@+id/projectTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Conservation Project / जल संवर्धन प्रकल्प"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Project Description -->
            <TextView
                android:id="@+id/projectDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This project aims to conserve water resources in the region. / हा प्रकल्प या क्षेत्रातील जल संसाधने जतन करण्याच्या उद्देशाने आहे."
                android:textSize="16sp"
                android:textColor="#666666"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Objectives -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Objectives: / उद्दिष्टे:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#E0F7FA"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/objectivesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To reduce water wastage and promote efficient water usage. / जल नासाडी कमी करणे आणि प्रभावी जल वापराला प्रोत्साहन देणे."
                android:textSize="16sp"
                android:textColor="#666666"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Start Date and Expected/Actual Completion Date -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Date: January 1, 2023 / प्रारंभ दिनांक: १ जानेवारी २०२३"
                android:textSize="16sp"
                android:textColor="#666666"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/completionDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expected Completion Date: December 31, 2023 / अपेक्षित पूर्णता दिनांक: ३१ डिसेंबर २०२३"
                android:textSize="16sp"
                android:textColor="#666666"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Project Status -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project Status: In Progress / प्रकल्प स्थिती: प्रगतीपथावर"
                android:textSize="16sp"
                android:textColor="#666666"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Budget and Funding -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget and Funding: / बजेट आणि निधी:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#E0F7FA"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/budgetTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total budget allocated: $10,000 / एकूण बजेट: $१०,०००"
                android:textSize="16sp"
                android:textColor="#666666"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Key Stakeholders -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key Stakeholders: / महत्त्वाचे भागधारक:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#E0F7FA"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/stakeholdersTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Local government and community leaders. / स्थानिक शासन आणि सामुदायिक नेते."
                android:textSize="16sp"
                android:textColor="#666666"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: / स्थान:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#E0F7FA"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project Location: Kouthali / प्रकल्प स्थान: कोंठाळी"
                android:textSize="16sp"
                android:textColor="#666666"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Progress Updates -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress Updates: / प्रगती अद्यतने:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#E0F7FA"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/progressUpdatesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Currently, the project is 50% complete. / सध्या, प्रकल्प ५०% पूर्ण झाला आहे."
                android:textSize="16sp"
                android:textColor="#666666"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
