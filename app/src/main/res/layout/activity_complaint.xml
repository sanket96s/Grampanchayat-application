<!-- res/layout/activity_complaint.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4C7A3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title for the page -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="समस्या नोंदवा"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Name Input Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="नाव :"
            android:textSize="16sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="आपले नाव भरा"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textPersonName"/>

        <!-- Address Input Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="पत्ता :"
            android:textSize="16sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="आपला पत्ता भरा"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textPostalAddress"/>

        <!-- Mobile Number Input Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="मोबाईल क्रमांक :"
            android:textSize="16sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/etMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="मोबाईल क्रमांक भरा"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="phone"/>

        <!-- Complaint Category Radio Buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="समस्या श्रेणी :"
            android:textSize="16sp"
            android:textColor="#000"/>
        <RadioGroup
            android:id="@+id/radioGroupCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            <RadioButton
                android:id="@+id/radioWater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="पाणी"/>
            <RadioButton
                android:id="@+id/radioRoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="रस्ता"/>
            <RadioButton
                android:id="@+id/radioElectricity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="वीज"/>
            <RadioButton
                android:id="@+id/radioOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="इतर"/>
        </RadioGroup>

        <!-- Complaint Description Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="समस्या :"
            android:textSize="16sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/etComplaint"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="आपली समस्या भरा"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:inputType="textMultiLine"
            android:minLines="5"/>

        <!-- Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="24dp">

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="अपलोड करा"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#FF8800"
                android:padding="10dp"
                android:layout_marginEnd="20dp"/>

            <!-- Track Complaint Button -->
            <Button
                android:id="@+id/btnTrackComplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="तक्रार शोधा"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#4CAF50"
                android:padding="10dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
