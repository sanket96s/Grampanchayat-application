<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4C7A3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title for the page -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Name Input Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_label"
            android:textSize="16sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_hint"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textPersonName"/>

        <!-- Address Input Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_label"
            android:textSize="16sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_hint"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textPostalAddress"/>

        <!-- Mobile Number Input Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobile_label"
            android:textSize="16sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/etMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mobile_hint"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="phone"/>

        <!-- Complaint Category Radio Buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_label"
            android:textSize="16sp"
            android:textColor="#000"/>
        <RadioGroup
            android:id="@+id/radioGroupCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            <RadioButton
                android:id="@+id/radioWater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/water"/>
            <RadioButton
                android:id="@+id/radioRoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/road"/>
            <RadioButton
                android:id="@+id/radioElectricity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/electricity"/>
            <RadioButton
                android:id="@+id/radioOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other"/>
        </RadioGroup>

        <!-- Complaint Description Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complaint_label"
            android:textSize="16sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/etComplaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/complaint_hint"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:inputType="textMultiLine"
            android:minLines="5"/>

        <!-- Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="24dp">

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_button"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#FF8800"
                android:padding="10dp"
                android:layout_marginEnd="20dp"/>

            <!-- Track Complaint Button -->
            <Button
                android:id="@+id/btnTrackComplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/track_button"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#4CAF50"
                android:padding="10dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
