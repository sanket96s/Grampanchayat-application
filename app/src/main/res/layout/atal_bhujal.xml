<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFDAB9">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Image and Header -->
            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/scheme4" />

            <!-- Bold line under header -->
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="126dp"
                android:layout_marginTop="16dp"
                android:text="अटल भूजल योजना"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imageView10"
                app:layout_constraintTop_toTopOf="@id/imageView10" />

            <View
                android:id="@+id/bold_line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:background="#000000"
                app:layout_constraintTop_toBottomOf="@id/imageView10" />

            <!-- Main Content -->
            <TextView
                android:id="@+id/textView22"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="अटल भूजल योजना (Atal Bhujal Yojana) भारत सरकारची योजना आहे, जी भूजलाचे संरक्षण आणि व्यवस्थापन करण्यासाठी राबवली जाते. या योजनेचा मुख्य उद्देश जलस्रोतांचा टिकाऊ वापर प्रोत्साहित करणे, भूजल पातळीत वाढ करणे, आणि जलसंपत्तीचे संवर्धन करणे आहे. योजना अंतर्गत स्थानिक समुदायांच्या सहभागाने पाण्याचा वापर कमी करणे, भूजल पातळीची मोजणी करणे, आणि जलसंवर्धनाबद्दल जागरूकता वाढवणे यासारखे उपक्रम घेतले जातात, ज्यामुळे ग्रामीण शेतकऱ्यांना दीर्घकालीन आणि टिकाऊ पाण्याचे व्यवस्थापन मिळवता येईल."
                app:layout_constraintTop_toBottomOf="@id/bold_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/bold_line1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:background="#000000"
                app:layout_constraintTop_toBottomOf="@id/textView22" />
            <!-- Eligibility Section -->
            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="पात्रता :"
                android:textColor="#272323"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/bold_line1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="1.	ग्रामीण रहिवासी &#xA;2.	कृषक   ( मुख्यतः शेतकरी आणि कृषी समुदायांसाठी.)&#xA;3.	पंचायतीची सदस्यता   &#xA;4.	जलस्रोत व्यवस्थापन  ( जलसंवर्धन उपक्रमांमध्ये भाग घेणारे संबंधित व्यक्ती.)&#xA;"
                app:layout_constraintTop_toBottomOf="@id/textView13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Second Bold Line -->
            <View
                android:id="@+id/bold_line2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:background="#000000"
                app:layout_constraintTop_toBottomOf="@id/textView7" />

            <!-- Required Documents Section -->
            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="आवश्यक कागदपत्रे :"
                android:textColor="#231E1E"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/bold_line2"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Third Bold Line -->
            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="1.	ओळखपत्र  (आधार कार्ड, मतदार ID, किंवा पासपोर्ट.)&#xA;2.	पत्त्याचे प्रमाणपत्र  ( यु्टिलिटी बिल, राशन कार्ड, किंवा मालमत्तेचे दस्तऐवज.)&#xA;3.	जमिनीच्या मालकीचे दस्तऐवज  ( शेतजमीनच्या मालकीचा पुरावा )&#xA;4.	अर्ज फॉर्म  &#xA;5.	पाण्याचा वापर नोंद    ( जलवापर संबंधित दस्तऐवज.)&#xA;"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView15" />

            <View
                android:id="@+id/bold_line3"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:background="#000000"
                app:layout_constraintTop_toBottomOf="@id/textView10" />

            <!-- Benefits Section -->
            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="फायदे :"
                android:textColor="#2C2727"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/bold_line3"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="1.	आर्थिक सहाय्य&#xA;2.	तांत्रिक सहाय्य &#xA;3.	कौशल्य विकास &#xA;4.	समुदाय सहभाग   &#xA;5.	दीर्घकालीन स्थिरता  &#xA;"
                app:layout_constraintTop_toBottomOf="@id/textView17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Apply Button -->
            <Button
                android:id="@+id/applyapplication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="अर्ज करा"
                app:layout_constraintTop_toBottomOf="@id/textView20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
