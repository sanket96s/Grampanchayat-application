<resources>
    <!-- Other styles -->

    <style name="NavigationViewTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#000000</item>
    </style>

        <!-- Global Styles -->
        <style name="SectionTitle" parent="TextAppearance.AppCompat.Large">
            <item name="android:textSize">24sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">#333333</item>
            <item name="android:paddingBottom">16dp</item>
        </style>

        <style name="SubSectionTitle" parent="TextAppearance.AppCompat.Medium">
            <item name="android:textSize">18sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">#333333</item>
            <item name="android:paddingTop">16dp</item>
            <item name="android:paddingBottom">8dp</item>
        </style>

        <style name="TableSectionBackground">
            <item name="android:background">#F0F8FF</item> <!-- Light cyan -->
            <item name="android:padding">8dp</item>
        </style>

        <style name="TableRowBackground">
            <item name="android:background">#E0FFFF</item> <!-- Light blue -->
            <item name="android:paddingTop">8dp</item>
            <item name="android:paddingBottom">8dp</item>
        </style>

        <style name="TableRowTextStyle">
            <item name="android:textSize">16sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">#000000</item>
            <item name="android:paddingLeft">8dp</item>
            <item name="android:paddingRight">8dp</item>
        </style>

        <style name="TextRowSubtext">
            <item name="android:textSize">14sp</item>
            <item name="android:textColor">#666666</item>
            <item name="android:paddingLeft">8dp</item>
            <item name="android:paddingRight">8dp</item>
        </style>

</resources>
